<group>
    <name><!--NAME--></name>
    <!-- define how many servers are allowed to run in this group -->
    <minServers><!--MIN_SERVERS--></minServers>
    <maxServers><!--MAX_SERVERS--></maxServers>
    <!-- if the CPU lower threshold is exceeded, how many servers to remove -->
    <amountToScaleDown><!--DELTA_DOWN--></amountToScaleDown>
    <!-- if the CPU upper threshold is exceeded, how many servers to clone -->
    <amountToScaleUp><!--DELTA_UP--></amountToScaleUp>
    <!-- define CPU thresholds, when to scale up and down -->
    <CPULowerThreshold><!--CPU_DOWN--></CPULowerThreshold>
    <CPUUpperThreshold><!--CPU_UP--></CPUUpperThreshold>
    <scalable>true</scalable>
</group>